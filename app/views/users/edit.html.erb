<main class="container">
  <div class="row justify-content-center my-4">
    <h1>Dashboard</h1>
    <div class="w-100"></div>
    <div class="col-xl">
      <ul class="nav nav-tabs nav-fill">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">概要</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-info active" href="<%= edit_user_path(current_user) %>">ユーザー編集</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/settings">各種設定</a>
        </li>
      </ul>
    </div>
    <div class="w-100"></div>
    <% if alert != nil %>
      <div class="alert alert-warning alert-dismissible fade show mt-2 mb-0" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <div class="w-100"></div>
    <div class="card shadow ml-3 my-5">
      <div class="card-body">
        <h3>User edit</h3>
        <!-- Form section -->
        <%= form_for @user do |f| %>
          <%= render "layouts/error_messages", model: f.object %>
          <div class="row">
            <div class="col-6 ml-3">
              <div class="form-group">
                <%= f.label :name, class: "form-control-label" %><br>
                <%= f.text_field :name, class: "form-control"%>
              </div>
              <div class="form-group">
                <%= f.label :email %><br>
                <%= f.text_field :email, class: "form-control"%>
              </div>
              <div class="form-group">
                <%= f.label :occupation %><br>
                <%= f.text_field :occupation %>
              </div>
            </div>
            <div class="col">
              <br>
              <div class="form-group">
                <%= f.label :image %><br>
                <div class="user-image">
                  <%= attachment_image_tag @user, :image, :fill, 100, 100, format: "jpg", :size => "100x100", fallback: "no-user-image.jpg" %>
                </div><br>
                <%= f.attachment_field :image, placeholder: "profile_image" %>
              </div>
            </div>
            <div class="col w-100 ml-3">
              <div class="form-group">
                <%= f.label :introduction %><br>
                <%= f.text_area :introduction, class: "form-control", size: "20x5" %>
              </div>
              <div class="form-action">
                <%= f.submit "Update Profile", class: "btn btn-lg btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% 12.times do |br| %>
    <br>
  <% end %>
</main>
