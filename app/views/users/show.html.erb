<main class="container-fluid mt--7">
  <div class="row">
    <div class="col-xl mb-5">
      <div class="card card-profile shadow">
        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
        </div>
        <div class="card-body pt-0 pt-md-4">
          <div class="row justify-content-center">
            <div class="user-image">
              <%= attachment_image_tag current_user, :image, :fill, 100, 100, :size => "100x100", fallback: "no-user-image.jpg", class: "shadow" %>
            </div>
          </div>
        </div>
        <div class="text-center">
          <h3>
            <%= current_user.name %>
          </h3>
          <div class="h5 font-weight-300">
            <%= current_user.occupation %>
          </div>
          <p class="mx-5 my-4"><%= current_user.introduction %></p>
        </div>
        <hr class="my-4" />
        <div class="row">
          <div class="col ml-4">
            <h4><%= current_user.name %>にコーヒーを奢る</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <% 12.times do |br| %>
    <br />
  <% end %>
</main>
